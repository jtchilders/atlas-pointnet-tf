{
   "model": {
      "model":                         "data_loading_test"
   },
   "optimizer": {
      "name":                          "adam",
      "lr":                            0.0001,
      "max_lr":                        0.01,
      "step_size":                     5000,
      "decay":                         0.99994,
      "mode":                          "triangle2",
      "lr_min":                        0.0000001
   },
   "loss": {
      "func":                          "pointnet_class_loss"

   },
   "data": {
      "handler":                       "csv_file_generator",
      "batch_size":                    10,
      "glob":                          "/gpfs/jlse-fs0/projects/datascience/parton/data/atlas/csv/zee2jets/*2l_2j.csv",
      "train_fraction":                0.9,
      "imgs_per_file":                 1,
      "num_points":                    15000,
      "num_features":                  4,
      "total_images":                  1000,
      "shuffle_on_epoch":              true,
      "classes":                       ["nothing","jet","electron"],
      "num_parallel_readers":          4,
      "parse_workers":                 2,
      "prefectch_buffer_size":         40
   },
   "training": {
      "epochs":                        100,
      "status":                        5
   },
   "validation": {
      "batches":                       1
   }
}
